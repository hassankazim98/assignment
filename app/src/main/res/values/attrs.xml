<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ParallaxScroll">
        <attr name="parallax_factor" format="float" />
        <attr name="alpha_factor" format="float" />
        <attr name="inner_parallax_factor" format="float" />
        <attr name="parallax_views_num" format="integer" />
        <attr name="circular_parallax" format="boolean" />
    </declare-styleable>

    <declare-styleable name="ParallaxScrollView">

        <!-- gravity -->
        <attr name="parallexOffset" format="float" />
    </declare-styleable>

    <attr name="hs_support_recyclerview_item_vertical_padding" format="integer" />

    <declare-styleable name="FabBottomNavigationView">
        <attr name="fab_cradle_margin" format="dimension" />
        <attr name="fab_cradle_rounded_corner_radius" format="dimension" />
        <attr name="cradle_vertical_offset" format="dimension" />
        <attr name="fab_size" format="dimension" />
    </declare-styleable>

    <!--    custom headerbar animation related stuff by Sakib START-->
    <attr name="mwhWaves" format="string|enum">
        <enum name="MultiWave" value="-1" />
        <enum name="PairWave" value="-2" />
    </attr>
    <attr name="mwhShape" format="enum">
        <enum name="Rect" value="0" />
        <enum name="RoundRect" value="1" />
        <enum name="Oval" value="2" />
    </attr>

    <declare-styleable name="MultiWaveHeader">
        <attr name="mwhWaveHeight" format="dimension" />
        <attr name="mwhStartColor" format="color" />
        <attr name="mwhCloseColor" format="color" />
        <attr name="mwhIsRunning" format="boolean" />
        <attr name="mwhEnableFullScreen" format="boolean" />
        <attr name="mwhColorAlpha" format="fraction|float" />
        <attr name="mwhProgress" format="fraction|float" />
        <attr name="mwhVelocity" format="fraction|float" />
        <attr name="mwhGradientAngle" format="integer" />
        <attr name="mwhCornerRadius" format="dimension" />
        <attr name="mwhWaves" />
        <attr name="mwhShape" />
    </declare-styleable>
    <!--    custom headerbar animation related stuff by Sakib END-->

    <!--    Circle Imageview  Sakib START-->

    <declare-styleable name="CircularImageView">
        <!-- BORDER -->
        <attr name="civ_border" format="boolean" />
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_color_start" format="color" />
        <attr name="civ_border_color_end" format="color" />
        <attr name="civ_border_color_direction">
            <flag name="left_to_right" value="1" />
            <flag name="right_to_left" value="2" />
            <flag name="top_to_bottom" value="3" />
            <flag name="bottom_to_top" value="4" />
        </attr>
        <!-- CIRCLE COLOR -->
        <attr name="civ_circle_color" format="color" />
        <attr name="civ_circle_color_start" format="color" />
        <attr name="civ_circle_color_end" format="color" />
        <attr name="civ_circle_color_direction">
            <flag name="left_to_right" value="1" />
            <flag name="right_to_left" value="2" />
            <flag name="top_to_bottom" value="3" />
            <flag name="bottom_to_top" value="4" />
        </attr>
        <!-- SHADOW -->
        <attr name="civ_shadow" format="boolean" />
        <attr name="civ_shadow_color" format="color" />
        <attr name="civ_shadow_radius" format="dimension" />
        <attr name="civ_shadow_gravity">
            <flag name="center" value="1" />
            <flag name="top" value="2" />
            <flag name="bottom" value="3" />
            <flag name="start" value="4" />
            <flag name="end" value="5" />
        </attr>
    </declare-styleable>
    <!--    Circle Imageview  Sakib END -->
</resources>